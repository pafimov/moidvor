<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImgDrop"
        android:minHeight="318dp"
        android:minWidth="289dp"
        android:maxWidth="289dp"
        android:layout_width="289dp"
        android:maxHeight="318dp"
        android:layout_height="318dp"
        android:layout_below="@+id/done"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"
        android:background="#E1E1E1"/>
    <Button
        android:id="@+id/rotate"
        android:layout_width="84dp"
        android:minWidth="84dp"
        android:minHeight="83dp"
        android:maxWidth="84dp"
        android:maxHeight="83dp"
        android:layout_height="83dp"
        android:layout_below="@+id/ImgDrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/rotate" />

    <ImageView
        android:id="@+id/bin"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:minWidth="82dp"
        android:minHeight="80dp"
        android:layout_below="@+id/ImgDrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="321dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="272dp"
        app:srcCompat="@drawable/trashbin" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="62dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        app:srcCompat="@drawable/donebutton" />

</RelativeLayout>