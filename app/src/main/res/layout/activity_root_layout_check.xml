<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dropLayout"
        android:layout_width="288dp"
        android:layout_height="316dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/ImageDrop"
            android:minHeight="318dp"
            android:minWidth="289dp"
            android:maxWidth="289dp"
            android:layout_width="289dp"
            android:maxHeight="318dp"
            android:layout_height="318dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="0dp"
            android:background="#E1E1E1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/countObjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/coordsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countObjects"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp" />

</RelativeLayout>